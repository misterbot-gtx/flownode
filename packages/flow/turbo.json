{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**", "package.json"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "typecheck": {
      "outputs": [],
      "env": ["NODE_ENV"]
    }
  }
}
